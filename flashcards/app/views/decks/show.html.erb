<%= link_to "Decks", decks_path %>

<h2><%= @deck.name %></h2>
<% @cards.each do |card| %>
	<div>
		<%= link_to card.front, deck_card_path(@deck.id, card.id) %>
		-
  		<%= link_to "Edit", edit_deck_card_path(@deck.id, card.id) %>
  		<%= link_to "Delete", [@deck, card], method: :delete, data: {confirm: 'Are you sure?'} %>
	</div>
<% end %>

<%= link_to "New card", new_deck_card_path(@deck) %>